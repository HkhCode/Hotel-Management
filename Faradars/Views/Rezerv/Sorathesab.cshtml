@model Faradars.Models.ViewModel.Sorathesabs
@using System.Globalization
@{
    ViewData["Title"] = "Sorathesab";
    Layout = "~/Views/Shared/_Layout.cshtml";

    PersianCalendar pc = new PersianCalendar();
    string dtk1 = string.Format("{0}/{1}/{2}", pc.GetYear(Model.Tarikhvariz.Date), pc.GetMonth(Model.Tarikhvariz.Date), pc.GetDayOfMonth(Model.Tarikhvariz.Date));

}

<div style="height:52px; background-color:#000"></div>
<div class="theme-page-section theme-page-section-xl theme-page-section-gray">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="theme-payment-success">
                    <div class="theme-payment-success-header">
                        <i class="fa fa-check-circle theme-payment-success-header-icon"></i>
                        <h1 class="theme-payment-success-title">رزرو شما با موفقیت انجام شد.</h1>
                    </div>
                    <div class="theme-payment-success-box">
                        <ul class="theme-payment-success-summary">
                            <li>
                                شماره تراکنش
                                <span>@Model.Trakonesh</span>
                            </li>
                            <li>
                                تاریخ پرداخت
                                <span> @dtk1 </span>
                            </li>
                            <li>
                                مشتری
                                <span>@Model.NameNameKhanevadgy</span>
                            </li>
                            <li>
                                کد پیگیری
                                <span>@Model.Codepigiry</span>
                            </li>
                            <li>
                                نوع پرداخت
                                <span>آنلاین - اینترنتی</span>
                            </li>
                            <li>
                                کل مبلغ پرداختی
                                <span>@Model.Gheymat ریال</span>
                            </li>
                        </ul>
                        <p class="theme-payment-success-check-order">
                            همچنین این اطلاعات برای شما ایمیل گردید
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

